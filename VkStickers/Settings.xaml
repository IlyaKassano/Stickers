<Window x:Class="VkStickers.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VkStickers"
        mc:Ignorable="d"
        Title="Settings" Width="Auto" Height="Auto" SizeToContent="WidthAndHeight">
    <StackPanel HorizontalAlignment="Center">
        <Grid x:Name="Grid1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,20,30,20" Loaded="Grid_Loaded">
            <Grid.Resources >
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0">Test</Label>
            <TextBlock Grid.Column="1" Width="100"/>
        </Grid>
        
        <DataGrid Height="100" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Width="100" Height="30" Margin="0 0 0 10">Save</Button>
    </StackPanel>
</Window>
